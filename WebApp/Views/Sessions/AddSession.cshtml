@using WebApp.ViewModels
@model AddSessionViewModel

<h2>Додати сеанс</h2>

@{
    Layout = "_AdminLayout";
}

<form asp-action="AddSession" method="post">
    <div class="form-group">
        <label for="movie">Фільм</label>
        <select id="movie" name="MovieId" class="form-control" required>
            <option value="">Оберіть фільм</option>
            @foreach (var movie in Model.Movies)
            {
                <option value="@movie.Id">@movie.Title</option>

            }
        </select>
    </div>

    <div class="form-group">
        <label for="hall">Зал</label>
        <select id="hall" name="HallId" class="form-control" required>
            <option value="">Оберіть зал</option>
            @foreach (var hall in Model.Halls)
            {
                <option value="@hall.Id">@hall.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="startTime">Дата та час сеансу</label>
        <input type="datetime-local" id="startTime" name="StartTime" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Додати сеанс</button>
</form>
