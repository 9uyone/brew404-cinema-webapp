@using System.Collections.Generic;
@using BusinessLogic.DTOs;
@model List<SessionDTO>

@{
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список сеансів</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Admin/addmovies.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin/addBtn.css" asp-append-version="true" />

</head>
<body>
    <form asp-action="AddSession" asp-controller="Sessions" method="get">
        <button type="submit" class="btn btn-primary fixed-button">
            <span class="plus-sign"></span>
        </button>
    </form>

    <div class="container mx-5">
        <br /><br />
        <h2 class="mb-4 text-center">Список сеансів</h2>
        <div class="list-group mx-auto" style="max-width: 1000px;">
            @foreach (var session in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <img style="max-width: 75px" class="rounded-2" src="@session.Movie.ImageUrl"/>
                    <h3 class="ms-5">@session.Movie.Title</h3>

                    <div class="d-flex flex-row ms-auto">
                        <div class="d-flex flex-column me-5">
                            <h3 class="fs-5">@session.StartTime.ToString("dd.MM.yyyy")</h3>
                            <h3 class="fs-5 text-muted">@session.StartTime.ToString("HH:mm")-@session.EndTime.ToString("HH:mm")</h3>
                        </div>

                        <h3 class="me-5">@session.Hall.Name</h3>

                        <form asp-action="UpdateSession" asp-route-id="@session.Id" method="post">
                            <button type="submit" class="btn btn-warning btn-lg me-2">Update</button>
                        </form>

                        <form asp-action="DeleteSession" asp-route-id="@session.Id" method="post"
                              onsubmit="return confirm('Ви впевнені, що хочете видалити сеанс @session.Movie.Title?');">
                            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>