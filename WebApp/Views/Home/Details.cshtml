@using BusinessLogic.DTOs;
@model MovieDTO

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Detailed view of a movie with recommendations and ticket booking options">
    <meta name="keywords" content="cinema, movie details, tickets, recommendations">
    <meta name="author" content="Cinema Website">
    <title>Cinema - Movie Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        /* Контейнер каруселі */
        .actor-carousel {
        flex-wrap: nowrap; /* Запобігає переходу на новий рядок */
        gap: 15px; /* Відступ між картками */
        scroll-behavior: smooth; /* Плавний скрол */
        overflow-x: auto; /* Горизонтальна прокрутка */
        padding-bottom: 10px;
        }

        /* Картка актора */
        .actor-card {
        flex: 0 0 150px; /* Фіксована ширина картки */
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s ease;
        }

        .actor-card:hover {
        transform: scale(1.05); /* Легка анімація при наведенні */
        }

        /* Зображення актора */
        .actor-card img {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        height: 200px; /* Фіксована висота зображення */
        object-fit: cover; /* Обрізати зображення, щоб воно не спотворювалося */
        }

        /* Тіло картки */
        .actor-card .card-body {
        text-align: center;
        padding: 10px;
        }

        .video-container {
        position: relative;
        padding-bottom: 56.25%; /* Це забезпечить пропорції 16:9 */
        height: 0;
        overflow: hidden;
        max-width: 100%;
        }

        .video-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%; /* Встановлює ширину на 100% */
        height: 600px; /* Задайте висоту за бажанням */
        }

        body {
            background-image: url('@("https://image.tmdb.org/t/p/w1280" + Model.BackgroundUrl)');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }  

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6); /* 0.6 — рівень затемнення */
            z-index: -1; /* Щоб фон був позаду контенту */
        }
        <style>
        /* Новий стиль для сесій */
        .session-block {
            background: rgba(40,40,40,0.9);
            border-radius: 10px;
            padding: 20px;
            margin-top: 30px;
        }
        .cinema-name {
            color: #ffc107;
            font-size: 1.4rem;
            margin-bottom: 15px;
        }
        .session-time {
            color: white;
            font-size: 1.1rem;
            margin: 8px 0;
            cursor: pointer;
            transition: 0.3s;
        }
        .session-time:hover {
            color: #28a745;
        }
    
    </style>

</head>
<body>
    <!-- Main content -->
    <main class="container bg-dark">
       <div class="row">
    <!-- Movie Poster -->
    <div class="col-md-4">
        @{var str = "https://image.tmdb.org/t/p/w1280" + Model.ImageUrl;
            <img src="@str" alt="@Model.Title Movie Poster" class="movie-poster">
        }
        
        <div class="session-block mt-3">
    <div class="date-selector">
        <button class="arrow-btn"><i class="fas fa-chevron-left"></i></button>
        <h3 class="date-display">
            <span class="date">30 січня</span>
            <span class="day">Середа</span>
        </h3>
        <button class="arrow-btn"><i class="fas fa-chevron-right"></i></button>
    </div>
    <div class="session-list">
        <div class="session-time">12:25 SDH</div>
        <div class="session-time">14:50 SDH</div>
        <div class="session-time">17:15 SDH</div>
        <div class="session-time">19:40 SDH</div>
    </div>
    <hr class="session-divider">
    <div class="session-highlight">Обрати</div>
</div>
    </div>
    
    <!-- Movie Details and Trailer -->
<div class="col-md-8">
    <h1>@Model.Title</h1>
    <br/><br/><br/>
    <h5 class="detail-label">Release Date:</h5>
    <h4>@Model.ReleaseDate</h4>
    <br/>
    <h5 class="detail-label">Runtime:</h5>
    <h4>@Model.RunTime min</h4>
    <br/>
    <h5 class="detail-label">Genres:</h5>
    <h4>@String.Join(", ", Model.Genres.Select(g => g.Name))</h4>
    <br/>
    <h5 class="detail-label">Overview:</h5>
    <h4>@Model.Overview</h4>



        
        <!-- Trailer -->
        <br/><br/>
        <div class="movie-trailer mt-4 trailer-container">
    <h5>Watch Trailer:</h5>
    @{ var trailerId = Model.TrailerUrl?.Split("=")[1]; }
    <div class="video-container">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/@trailerId" allowfullscreen></iframe>
    </div>
</div>
        
       
    </div>
</div>


        <!-- Actors Section -->
        <div class="container mt-5">
            <h2 class="mb-4">Actors</h2>
            <div id="actorCarousel" class="actor-carousel d-flex overflow-hidden position-relative">
                @foreach (var credit in Model.Actors)
                {
                    var avatar = "https://image.tmdb.org/t/p/w500" + @credit.AvatarUrl;
                    <div class="card actor-card">
                        <img src="@avatar" class="card-img-top" alt="@credit.Name">
                        <div class="card-body">
                            <h5 class="card-title" style="color: white">@credit.Name</h5>
                            <p class="card-title" style="color: white">@credit.Character</p>
                        </div>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <button id="scrollLeft" class="btn btn-outline-primary">←</button>
                <button id="scrollRight" class="btn btn-outline-primary">→</button>
            </div>
        </div>

        <!-- Recommendations Section -->
        <section class="mt-5">
            <h3>You May Also Like</h3>
            <div class="d-flex overflow-auto">
                
            </div>
        </section>
    </main>


    <!-- Footer -->
    <footer class="bg-dark text-light py-3">
        <div class="container text-center">
            <p>&copy; 2025 Cinema. All rights reserved.</p>
        </div>
    </footer>

    <script>
        document.getElementById('scrollLeft').addEventListener('click', function () {
            document.getElementById('actorCarousel').scrollBy({ left: -200, behavior: 'smooth' });
        });

        document.getElementById('scrollRight').addEventListener('click', function () {
            document.getElementById('actorCarousel').scrollBy({ left: 200, behavior: 'smooth' });
        });
    </script>

