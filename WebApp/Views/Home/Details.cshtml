@using BusinessLogic.DTOs;
@model MovieDTO

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Detailed view of a movie with recommendations and ticket booking options">
    <meta name="keywords" content="cinema, movie details, tickets, recommendations">
    <meta name="author" content="Cinema Website">
    <title>Cinema - Movie Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
    <style>
        /* Контейнер каруселі */
        .actor-carousel {
        flex-wrap: nowrap; /* Запобігає переходу на новий рядок */
        gap: 15px; /* Відступ між картками */
        scroll-behavior: smooth; /* Плавний скрол */
        overflow-x: auto; /* Горизонтальна прокрутка */
        padding-bottom: 10px;
        }

        /* Картка актора */
        .actor-card {
        flex: 0 0 150px; /* Фіксована ширина картки */
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s ease;
        }

        .actor-card:hover {
        transform: scale(1.05); /* Легка анімація при наведенні */
        }

        /* Зображення актора */
        .actor-card img {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        height: 200px; /* Фіксована висота зображення */
        object-fit: cover; /* Обрізати зображення, щоб воно не спотворювалося */
        }

        /* Тіло картки */
        .actor-card .card-body {
        text-align: center;
        padding: 10px;
        }
    </style>

</head>
<body>

    <!-- Main content -->
    <main class="container my-4">
        <!-- Movie Details -->
        <div class="row">
            <div class="col-md-4">
                @{var str = "https://image.tmdb.org/t/p/w1280" + Model.ImageUrl;
                    <img src="@str" alt="@Model.Title Movie Poster" class="movie-poster">
                }
            </div>
            <div class="col-md-8">
                <h2>@Model.Title</h2>
                <p><strong>@Model.ReleaseDate</strong> &bull; <strong>2 hr 19 min</strong> &bull; <strong>Horror</strong></p>
                <p>@Model.Overview</p>

                <button class="btn btn-primary">Watch Trailer</button>
                <button class="btn btn-success">Buy Tickets</button>
            </div>
        </div>


        <div class="container mt-5">
            <h2 class="mb-4">crew</h2>
            <div id="actorCarousel" class="actor-carousel d-flex overflow-hidden position-relative">
                @foreach (var credit in Model.Crew)
                {
                    var avatar = "https://image.tmdb.org/t/p/w500" + @credit.AvatarUrl;
                    <div class="card actor-card">
                        <img src="@avatar" class="card-img-top" alt="@credit.Name">
                        <div class="card-body">
                            <h5 class="card-title" style="color: white">@credit.Name</h5>
                        </div>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <button id="scrollLeft" class="btn btn-outline-primary">←</button>
                <button id="scrollRight" class="btn btn-outline-primary">→</button>
            </div>
        </div>

        <!-- Recommendations -->
        <section class="mt-5">
            <h3>You May Also Like</h3>
            <div class="recommendations">
                <div class="recommendation-track" id="recommendationTrack">
                    <a href="#" class="recommendation-card">
                        <img src="https://uaserials.pro/posters/1794.webp" alt="Recommendation 1">
                    </a>
                    <a href="#" class="recommendation-card">
                        <img src="https://uaserials.pro/posters/1794.webp" alt="Recommendation 2">
                    </a>
                    <a href="#" class="recommendation-card">
                        <img src="https://uaserials.pro/posters/1794.webp" alt="Recommendation 3">
                    </a>
                    <a href="#" class="recommendation-card">
                        <img src="https://uaserials.pro/posters/1794.webp" alt="Recommendation 4">
                    </a>
                    <a href="#" class="recommendation-card">
                        <img src="https://uaserials.pro/posters/1794.webp" alt="Recommendation 5">
                    </a>
                    <a href="#" class="recommendation-card">
                        <img src="https://uaserials.pro/posters/1794.webp" alt="Recommendation 6">
                    </a>
                </div>
                <div class="carousel-controls">
                    <button id="prevBtn">&#8249;</button>
                    <button id="nextBtn">&#8250;</button>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-3">
        <div class="container text-center">
            <p>&copy; 2025 Cinema. All rights reserved.</p>
        </div>
    </footer>

    <script>
        document.getElementById('scrollLeft').addEventListener('click', function () {
            document.getElementById('actorCarousel').scrollBy({ left: -200, behavior: 'smooth' });
        });

        document.getElementById('scrollRight').addEventListener('click', function () {
            document.getElementById('actorCarousel').scrollBy({ left: 200, behavior: 'smooth' });
        });
    </script>

